@page "/staff/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Add New Staffs</h3>
<br />

<FormComponent ButtonText="Add Staffs" staff="staff" OnValidSubmit="@CreateStaffs"/>

@code {
    Staff staff = new Staff();

    protected async Task CreateStaffs()
    {
        await _client.PostAsJsonAsync(Endpoints.StaffsEndPoint, staff);
        _navManager.NavigateTo("/staff/");
    }
}
